<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/songListItem">
    <TextView
        android:id="@+id/songTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wisdom"
        android:layout_toEndOf="@id/songItemPlayPauseImgBtn"/>
    <TextView
        android:id="@+id/songArtistTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guggenheim grotto"
        android:layout_below="@id/songTitleTv"
        android:layout_toEndOf="@id/songItemPlayPauseImgBtn"
        android:layout_toStartOf="@id/songDurationTv"
        />
    <ImageButton
        android:id="@+id/songItemPlayPauseImgBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_play"
        android:contentDescription="song_status"/>

    <TextView
        android:id="@+id/songDurationTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/songTitleTv"
        android:layout_alignParentEnd="true"
        android:text="00:00"/>
</RelativeLayout>
